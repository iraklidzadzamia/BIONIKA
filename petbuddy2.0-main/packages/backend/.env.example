# ==========================================
# Backend Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# Server Configuration
# ------------------------------------------
NODE_ENV=development                    # Options: development, production, test
PORT=3000                               # Server port

# ------------------------------------------
# Database
# ------------------------------------------
# MongoDB connection string (Required)
MONGODB_URI=mongodb://localhost:27017/petbuddy

# Production example (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ------------------------------------------
# JWT Configuration
# ------------------------------------------
# Generate secure random strings (min 32 chars) for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=another-secure-random-string-min-32-chars
ACCESS_TOKEN_TTL=15m                    # Access token lifetime (e.g., 15m, 1h)
REFRESH_TOKEN_TTL=7d                    # Refresh token lifetime (e.g., 7d, 30d)

# ------------------------------------------
# Frontend/CORS Configuration
# ------------------------------------------
# Frontend URL for CORS and OAuth redirects
FRONTEND_URL=http://localhost:5173
# Comma-separated allowed origins for CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ------------------------------------------
# Security
# ------------------------------------------
BCRYPT_SALT_ROUNDS=12                   # Bcrypt salt rounds (10-15)
INTERNAL_SERVICE_API_KEY=your-secure-random-string-min-32-chars  # For internal service auth

# ------------------------------------------
# Logging
# ------------------------------------------
LOG_LEVEL=info                          # Options: error, warn, info, debug

# ------------------------------------------
# Facebook Integration (Optional)
# ------------------------------------------
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_GRAPH_VERSION=v18.0            # Facebook Graph API version
FACEBOOK_SCOPES=pages_messaging,pages_read_engagement,pages_manage_metadata

# ------------------------------------------
# Google Calendar Integration (Optional)
# ------------------------------------------
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ------------------------------------------
# Meta Bot Service
# ------------------------------------------
META_BOT_BASE_URL=http://localhost:5001  # Meta Bot service URL
