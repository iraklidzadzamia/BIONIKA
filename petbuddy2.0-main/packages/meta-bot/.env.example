# ==========================================
# Meta-Bot Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# Server Configuration
# ------------------------------------------
NODE_ENV=development                    # Options: development, production, test
META_BOT_PORT=5001                      # Meta-Bot server port

# ------------------------------------------
# Database
# ------------------------------------------
# MongoDB connection string (Required) - Should match backend database
MONGODB_URI=mongodb://localhost:27017/petbuddy

# Production example (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ------------------------------------------
# Backend Integration
# ------------------------------------------
# Main backend API URL for internal communication
BACKEND_API_URL=http://localhost:3000

# Optional: Outbound server URL for forwarding messages
# OUTBOUND_SERVER_URL=http://localhost:3000/api/outbound

# ------------------------------------------
# Security
# ------------------------------------------
# Internal service API key for backend communication (Required)
# Should match backend's INTERNAL_SERVICE_API_KEY
INTERNAL_SERVICE_API_KEY=your-secure-random-string-min-32-chars

# Facebook/Instagram webhook verification token (Required)
VERIFY_TOKEN=my_secure_verify_token_2024

# JWT secrets (for token verification, should match backend)
JWT_ACCESS_SECRET=your-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=another-secure-random-string-min-32-chars

# ------------------------------------------
# Facebook Integration (Required for Facebook messaging)
# ------------------------------------------
# Get these from: https://developers.facebook.com/apps/
FB_PAGE_ACCESS_TOKEN=your-facebook-page-access-token
APP_SECRET=your-facebook-app-secret

# Admin Facebook credentials (Optional, for system notifications)
ADMIN_PAGE_ACCESS_TOKEN=your-admin-page-access-token
ADMIN_CHAT_ID=your-admin-chat-id

# ------------------------------------------
# Instagram Integration (Required for Instagram messaging)
# ------------------------------------------
# Instagram uses Facebook Page Access Token
INSTA_PAGE_ACCESS_TOKEN=your-instagram-page-access-token

# Admin Instagram credentials (Optional, for system notifications)
ADMIN_INSTAGRAM_ACCESS_TOKEN=your-admin-instagram-access-token
ADMIN_INSTAGRAM_CHAT_ID=your-admin-instagram-chat-id

# ------------------------------------------
# OpenAI Configuration (Required for AI bot responses)
# ------------------------------------------
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# AI Models
CHAT_MODEL=gpt-4o                       # Chat completion model
IMAGE_MODEL=gpt-4o                      # Image analysis model

# ------------------------------------------
# Google Gemini AI Configuration (Alternative to OpenAI)
# ------------------------------------------
# Get API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Models
GEMINI_CHAT_MODEL=gemini-1.5-pro        # Options: gemini-1.5-pro, gemini-1.5-flash
GEMINI_VISION_MODEL=gemini-1.5-pro-vision
# Optional: Override Gemini API version (defaults to v1 for 1.5 models, v1beta otherwise)
# GEMINI_API_VERSION=v1beta

# ------------------------------------------
# Bot Behavior
# ------------------------------------------
# Delay before bot responds (milliseconds)
RESPONSE_DELAY_MS=4000

# Optional: Override system instructions
# SYSTEM_INSTRUCTIONS=You are a helpful pet care assistant.

# ------------------------------------------
# Feature Flags
# ------------------------------------------
# Enable LangGraph for AI orchestration (true/false)
# LangGraph provides better multi-step reasoning and tool orchestration
# Set to 'false' to use legacy LLM implementation
USE_LANGGRAPH=true

# Use Gemini AI instead of OpenAI (true/false)
# Set to 'true' to use Google Gemini, 'false' to use OpenAI
# Note: Requires GEMINI_API_KEY to be set
USE_GEMINI=false
